<Window x:Class="HLeisureClient.StartUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartUp" Height="150" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Server Path" Grid.Row="0" Grid.Column="0" />
        <TextBox Name="txtPath" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center" Width="200" Height="20"/>
        <Button Name="btnSave" Content="Save" Grid.Row="2" Grid.Column="1" Click="btnSave_Click" Height="20" Width="100"  />
    </Grid>
</Window>
